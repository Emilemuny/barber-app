div(id='MexampleModal-{{$index}}').example.modal.fade(tabindex='-1', ng-controller='HomeCtrl')
  
  .modal-dialog
    .modal-content
      .modal-header
         | {{business.name}}
        h4#myModalLabel.modal-title  Hello {{business.name}}
      .modal-body
        | Reviews
        table.table.table-hover
          tbody
            tr(ng-repeat= 'review in reviews')
              td: p {{review.text}}
      .modal-footer
        button.btn.btn-default(type='button', data-dismiss='modal') Close
        button.btn.btn-primary(type='button') Save changes



        
    
